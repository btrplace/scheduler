<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>btrplace</groupId>
    <artifactId>solver-api</artifactId>
    <version>0.1-SNAPSHOT</version>

    <description>Core components for a reconfiguration algorithm</description>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <developers>
        <developer>
            <name>Fabien Hermenier</name>
            <email>fabien.hermenier@unice.fr</email>
        </developer>
    </developers>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>2.0</version>
            </extension>
        </extensions>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.2</version>
            <type>jar</type>
            <scope>test</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>btrplace</groupId>
            <artifactId>model</artifactId>
            <version>0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:git:git://github.com/fhermeni/btrplace-solver-api.git</connection>
        <url>scm:git:git@github.com:fhermeni/btrplace-solver-api</url>
        <developerConnection>scm:git:git@github.com:fhermeni/btrplace-solver-api.git</developerConnection>
    </scm>


    <distributionManagement>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>btrp</id>
            <name>Corporate Repository</name>
            <url>
                scpexe://btrp.inria.fr:/home/maven/repos/releases
            </url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>btrp</id>
            <name>Corporate Repository</name>
            <url>
                scpexe://btrp.inria.fr:/home/maven/repos/snapshot-releases
            </url>
            <layout>default</layout>
        </snapshotRepository>
    </distributionManagement>
</project>